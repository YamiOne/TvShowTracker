extends layout

block content
  
    form(novalidate, id = "show_form" class = "new-show-form")
        div.form-group
            input(type = 'text', name = "title", id = "input_title", placeholder = 'Title')
        div.week-wrapper
            each day, index in days
                div(class = "day day--sm", id = "day_" + index, day_val = index)
                    span= day
        div.form-footer
            button(type = 'button', class = 'btn btn--success btn--md' id = "btn_submit") Add show

    div#msg_overlay.overlay
        div.modal.modal--msg
            img(src = "img/check_mark.png" alt = "icon" class = "check")
            h1.title Done!

    div#progress_overlay.overlay
        img(src = "img/progress_icon_2.png" alt = "icon" class = "progress")
        img(src = "img/progress_tick.png" alt = "icon" class = "progress__tick")